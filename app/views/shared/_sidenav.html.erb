<div class="col-md-2"></div>
<div class="col-md-3">
  <% if current_user %>
    <%= image_tag(@profile.profile_pic, class:"profile-pic")  %>
    <h2><%= @profile.username %></h2>
    <h6><%= @profile.name %></h6><hr/>
    <h6><%= image_tag('location.svg') %> <%= @profile.location %></h6>
    <h6><%= image_tag('mail.svg') %> <%= @profile.email %></h6>
    <!--move datetime to model method  -->
    <h6><%= image_tag('clock.svg') %> Joined on <%= @profile.joined_on.to_datetime.strftime("%b %d, %Y") %></h6><hr />
  <% end %>
</div>
